<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/projectStar"
        android:layout_width="34dip"
        android:layout_height="34dip"
        android:layout_marginRight="10dip"
        android:contentDescription="@string/project_star"
        android:src="@drawable/ic_star" />

    <TextView
        android:id="@+id/projectName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/projectStar"
        android:gravity="center_vertical|left"
        android:text="@string/loading"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/projectUpdatedTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/projectName"
        android:layout_below="@+id/projectName"
        android:text="@string/loading"
        android:textSize="12sp" />

</RelativeLayout>